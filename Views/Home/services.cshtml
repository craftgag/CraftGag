@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="imagebg videobg height-70 cover cover-7" data-overlay="4">
    <video autoplay loop muted>
        <source src="~/video/video.webm" type="video/webm">
        <source src="~/video/video.mp4" type="video/mp4">
        <source src="~/video/video.ogv" type="video/ogv">
    </video>
    <div class="background-image-holder">
        <img alt="image" src="~/img/video.jpg" />
    </div>
    <div class="container pos-vertical-center">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h2>CraftGag Services</h2>
                <p class="lead">
                    Interact and consult with team of CraftGag.
                </p>
            </div>
        </div>
        
       </div>
</section>
<section class="section--overlap">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 text-center">
                <div class="piechart piechart-3" data-size="200" data-value="93">
                    <div class="piechart__overlay">
                        <div class="piechart__description">
                            <i class="icon-Computer-2"></i>
                        </div>
                    </div>
                </div>
                <h5>Digital Content</h5>
                <p>
                    Our smart solution for trainers and learners
                    <br class="hidden-sm hidden-xs" /> makes it fast and fun
                </p>
            </div>
            <div class="col-sm-4 text-center">
                <div class="piechart piechart-3" data-size="200" data-value="88">
                    <div class="piechart__overlay">
                        <div class="piechart__description">
                            <i class="icon-Medicine"></i>
                        </div>
                    </div>
                </div>
                <h5>Healthcare</h5>
                <p>
                    We facilitate digital health
                    <br class="hidden-sm hidden-xs" /> care services
                </p>
            </div>
            <div class="col-sm-4 text-center">
                <div class="piechart piechart-3" data-size="200" data-value="100">
                    <div class="piechart__overlay">
                        <div class="piechart__description">
                            <i class="icon-Data-Network"></i>
                        </div>
                    </div>
                </div>
                <h5>Learning Management</h5>
                <p>
                    pick your trainers and practice
                    <br class="hidden-sm hidden-xs" /> to be the best
                </p>
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>